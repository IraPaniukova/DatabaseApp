<UserControl x:Class="ProjectPaniukova.Views.UC_ViewAllEmployees"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectPaniukova.Views"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <StackPanel Background="Orange" Width="500">

        <Grid Height="100" >
            <Label  Content="View all employees" HorizontalAlignment="Center" Margin="0,2,0,0" VerticalAlignment="Top" FontSize="23"/>
            <Button x:Name="ViewButton"  Content="View" HorizontalAlignment="Center" Margin="0,53,0,10" FontSize="18" Width="76" Click="EnterButton_Click" RenderTransformOrigin="-1.834,-4.781" />

        </Grid>
        <Grid Height="350">
        <DataGrid Name="EmployeesDataGrid" Height="300"  Width="426"/>
        </Grid>
    </StackPanel>
</UserControl>
